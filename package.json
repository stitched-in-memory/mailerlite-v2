    "url": "https://github.com/stitched-in-memory/mailerlite-v2/issues"
  },
  "homepage": "https://github.com/stitched-in-memory/mailerlite-v2#readme",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2"
  }
